let x = 0;
let y = 0;
let spacing = 10;

function setup() {
	createCanvas(400, 400)
	background(0);
}

function draw() {

	if (random(1) < 0.5) {
		stroke(225, 0, 0);
		line (x, y, x + spacing, y + spacing);
	}
	else{
		stroke(0, 0, 225);
		line(x, y + spacing, x + spacing, y);
	}
	x = x + 10;
	if (x > width) {
		x = 0;
		y = y + spacing;
	}
	
}
